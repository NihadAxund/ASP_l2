@model Lesson2.Models.PersonsListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            background-color: rgba(12, 12, 12, 0.945);
        }

        .Sec-1 {
            width: 100%;
            height: 90vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .Sec-2 {
            width: 100%;
            height: 10vh;
            display: flex;
            align-items: start;
            justify-content: end;
        }

        .Sec-1-1 {
            margin-top: 10px;
            width: 95%;
            height: 100%;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            overflow: scroll;
            overflow-x: hidden;
            background-color: rgba(39, 39, 39, 0.724);
        }

        .card {
            width: 200px !important;
            height: 250px !important;
            margin: 10px !important;
        }

            .card:hover {
                box-shadow: rgb(0, 0, 0) 0px 20px 80px -30px, rgba(255, 255, 255, 0.3) 0px 30px 60px -30px, rgba(255, 255, 255, 0.35) 0px -2px 6px 0px inset;
            }

        ::-webkit-scrollbar {
            width: 10px;
        }

        /* Kaydırma çubuklarının arkaplan rengi */
        ::-webkit-scrollbar-track {
            background: none;
        }

        /* Kaydırma çubukları */
        ::-webkit-scrollbar-thumb {
            background: #ffffff;
            border-radius: 20px;
        }

            /* Kaydırma çubuklarının üzerine gelindiğinde */
            ::-webkit-scrollbar-thumb:hover {
                background: rgb(230, 230, 173);
            }
    </style>

    <title>
       Person List
    </title>
</head>
<body>

              
    <section class="Sec-1">
        <section class="Sec-1-1">
            @if (Model.Persons != null)
            {
               @foreach (var item in Model.Persons)
               {
                    <div class="card" style="width: 18rem;">
                        <img src="@item.ImageUrl"
                             class="card-img-top" alt="Nihad">
                        <div class="card-body">
                            <p class="card-text d-flex align-items-center color-dark justify-content-center">@item.Name @item.Surname</p>
                        </div>
                    </div>                
               }                
            }

           
        </section>
    </section>

    <section class="Sec-2">
        @using (Html.BeginForm("ButtonClick", "Home", FormMethod.Post))
        {
             <button type="submit" class="btn btn-outline-light mt-4 me-5">Add Person</button>
     
        }
    </section>

</body>
</html>


